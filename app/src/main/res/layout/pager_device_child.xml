<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/device_child_listview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/device_view" />


        <TextView
            android:id="@+id/id_device_id"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"

            android:text="@string/device_id" />
        <TextView
            android:id="@+id/id_device_id_value"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="1111" />
        <TextView
            android:id="@+id/id_device_state"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="@string/device_state" />
        <TextView
            android:id="@+id/id_device_state_value"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="使用中" />
        <TextView
            android:id="@+id/id_device_child_placefrom_value"
            android:visibility="gone"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/id_device_child_timefrom_value"
            android:visibility="gone"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/id_device_child_timecurrent_value"
            android:visibility="gone"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/id_device_child_placecurrent_value"
            android:visibility="gone"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/id_device_child_username_value"
            android:visibility="gone"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"/>
        <!--<ImageView
            android:id="@+id/view_child_image_detail"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:background="@color/cp_divider"
            android:src="@mipmap/detail_48" />-->
    </LinearLayout>
</RelativeLayout>